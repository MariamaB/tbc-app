{
  "compileOnSave": false,

  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": ["./src/**/*"]
}